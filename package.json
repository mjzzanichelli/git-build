{
  "name": "git-build",
  "version": "0.0.1",
  "private": true,
  "description": "Automated build from git pushes",
  "main": "index.js",
  "scripts": {
    "preinstall": "cd src && for /D /r %G in (\"*.mod\") DO npm install %G",
    "test": "npm install && cd test && for /r %G in (\"*.spec.js\") DO mocha %G",
    "start": "npm install && node index"
  },
  "devDependencies": {
    "async": "^0.9.0",
    "body-parser": "^1.11.0",
    "chai": "^1.10.0",
    "express": "^4.11.2",
    "gift": "^0.5.0",
    "mocha": "^2.1.0",
    "rimraf": "^2.2.8",
    "should": "^4.6.3",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.6.0"
  }
}
